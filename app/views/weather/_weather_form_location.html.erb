<div class="text-center">
  <div class="row top-margin">
    <div class="col-md-4">
      <%= label_tag I18n.t('weather_form.longitude') %>
    </div>
    <div class="col-md-4">
      <%= number_field_tag(:lon, min: -180, max: 180) %>
    </div>
  </div>
  <div class="row top-margin">
    <div class="col-md-4">
      <%= label_tag I18n.t('weather_form.latitude') %>
    </div>
    <div class="col-md-4">
      <%= number_field_tag(:lat, min: -90, max: 90) %>
    </div>
  </div>
</div>