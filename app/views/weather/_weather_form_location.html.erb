<div class="text-center">
  <div class="row top-margin">
    <div class="col-md-4">
      <%= check_box_tag 'user_location' %>
    </div>
    <div class="col-md-4">
      <%= label_tag I18n.t('weather_form.user_location') %>
    </div>
  </div>
  <div class="row top-margin">
    <div class="col-md-4">
      <%= label_tag I18n.t('weather_form.longitude') %>
    </div>
    <div class="col-md-4">
      <%= text_field_tag(:lon) %>
    </div>
  </div>
  <div class="row top-margin">
    <div class="col-md-4">
      <%= label_tag I18n.t('weather_form.latitude') %>
    </div>
    <div class="col-md-4">
      <%= text_field_tag(:lat) %>
    </div>
  </div>
</div>